<div class="modal fade" id="modalBeneficiario" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariollLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Beneficiários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="beneficiariosForm" method="post">
                    <div class="row" style="display: flex; justify-content: center; align-items:end">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="BeneficiarioNome">Nome do Beneficiário:</label>
                                <input type="text" class="form-control" id="BeneficiarioNome" name="BeneficiarioNome">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="BeneficiarioCPF">CPF:</label>
                                <input type="text" class="form-control" id="BeneficiarioCPF" name="BeneficiarioCPF" placeholder="Ex.: 123.456.789-00" maxlength="14">
                            </div>
                        </div>
                        <div class="col-md-2 c">
                            <div class="form-group">
                                <button class="btn btn-success" id="btnSalvar" type="button" onclick="salvarBeneficiario()">Incluir</button>
                            </div>
                        </div>
                    </div>
                </form>

                <table class="table table-striped" id="beneficiariosTable">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="beneficiariosTableBody">
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>